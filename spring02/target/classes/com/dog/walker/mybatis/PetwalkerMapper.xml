<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="petwalker">

	<select id="getList" resultType="petwalkerDto">
		SELECT * FROM pet_walker ORDER BY id DESC
	</select>

	<select id="getData" parameterType="string"
		resultType="petwalkerDto">
		SELECT *
		FROM pet_walker
		WHERE id=#{id}
	</select>

	<insert id="insert" parameterType="petwalkerDto">
		INSERT INTO pet_walker
		VALUES(#{id}, #{nickname}, #{pwd}, #{kakao}, #{phone}, #{addr}, #{sex}, #{hasPet},
		#{imagePath}, #{evaluation}, SYSDATE)
	</insert>

	<update id="update" parameterType="petwalkerDto">
		UPDATE pet_walker SET kakao = #{kakao}, phone = #{phone}, addr = #{addr},
		hasPet = #{hasPet}
		WHERE id = #{id}
	</update>

	<delete id="delete" parameterType="String">
		DELETE FROM pet_walker WHERE id = #{id}
	</delete>

	<select id="isExist" parameterType="petwalkerDto"
		resultType="string">
		SELECT id
		FROM pet_walker
		WHERE id=#{id}
	</select>

	<update id="updatePwd" parameterType="petwalkerDto">
		update pet_walker
		set pwd=#{pwd}
		where id=#{id}
	</update>

	<update id="updateImg" parameterType="petwalkerDto">
		update pet_walker
		set imagePath=#{imagePath}
		where id=#{id}
	</update>

</mapper>